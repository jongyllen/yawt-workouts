            "name": "Sunrise Mobility",
            "blocks": [
                {
                    "id": "b1",
                    "name": "Sun Salutation Alpha",
                    "type": "main",
                    "rounds": 3,
                    "restBetweenRounds": 30,
                    "steps": [
                        {
                            "id": "s1",
                            "type": "hold",
                            "name": "Mountain Pose",
                            "durationSeconds": 20,
                            "instructions": "Stand tall with arms at your sides. Feel grounded through all four corners of your feet.",
                            "cues": [
                                "Engage thighs",
                                "Lift crown of head"
                            ]
                        },
                        {
                            "id": "s2",
                            "type": "hold",
                            "name": "Downward Dog",
                            "durationSeconds": 40,
                            "instructions": "Standard downward dog. Focus on the stretch in your entire back side.",
                            "cues": [
                                "Push through palms",
                                "Roll shoulders out"
                            ]
                        },
                        {
                            "id": "s3",
                            "type": "hold",
                            "name": "Cobra Pose",
                            "durationSeconds": 30,
                            "instructions": "Lower your hips, lift your chest. Keep your elbows slightly bent and close to your ribs.",
                            "cues": [
                                "Look forward",
                                "Relax your glutes"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "id": "yoga-evening-A",
